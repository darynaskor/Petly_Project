<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Petly.Maui.Views.AdminVolunteerListPage"
             Title="Заявки на волонтерство"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,*">
        <Label Text="Заявки на волонтерство" FontSize="24" FontAttributes="Bold" Margin="16"/>

        <CollectionView x:Name="RequestsList"
                        Grid.Row="1"
                        SelectionMode="Single"
                        SelectionChanged="OnRequestSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="12" Margin="8" CornerRadius="8" BorderColor="#CCC">
                        <VerticalStackLayout>
                            <Label Text="{Binding FirstName}" FontAttributes="Bold"/>
                            <Label Text="{Binding LastName}" />
                            <Label Text="{Binding Email}" />
                            <Label Text="{Binding Phone}" />
                            <Label Text="{Binding Shelter}" />
                            <Label Text="{Binding Type}" />
                            <Label Text="{Binding Status}" TextColor="Gray"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
