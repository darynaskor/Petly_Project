<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Petly.Maui.Views.EditProfilePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:Petly.Maui.ViewModels"
    x:DataType="viewmodel:EditProfileViewModel"
    Title="Редагування профілю"
    BackgroundColor="#FFFFFBF7">

    <ScrollView>
            <VerticalStackLayout Padding="16" Spacing="12">
        <Label Text="Редагування профілю" FontSize="28" FontAttributes="Bold" Margin="0,0,0,8" />

        <!-- Фото профілю -->
        <Border WidthRequest="200" HeightRequest="200" StrokeThickness="2" Stroke="Black" HorizontalOptions="Center" VerticalOptions="Center">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="40"/>
            </Border.StrokeShape>
            <Image WidthRequest="180" HeightRequest="180" Aspect="AspectFit" Source="{Binding AvatarImage}" />
        </Border>
        <Button Text="Змінити фото"
        Command="{Binding ChangePhotoCommand}"
        BackgroundColor="#FFD79F00"
        TextColor="Black"
        HorizontalOptions="Center"/>


        <!-- Поля -->
        <Entry Placeholder="Ім'я" Text="{Binding FirstName}" />
        <Entry Placeholder="Прізвище" Text="{Binding LastName}" />
        <Entry Placeholder="Email" Keyboard="Email" Text="{Binding Email}" />

        <Button Text="Зберегти зміни" Command="{Binding SaveCommand}" BackgroundColor="#FFD79F00" TextColor="Black" />
        <Button Text="Скасувати" Command="{Binding CancelCommand}" BackgroundColor="Transparent" TextColor="Black" />
    </VerticalStackLayout>

    </ScrollView>
</ContentPage>
