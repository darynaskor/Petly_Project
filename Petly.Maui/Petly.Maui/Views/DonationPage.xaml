<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Petly.Maui.Views.DonationPage"
             Title="Внесок"
             BackgroundColor="#FFFFFBF7">

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="20">

            <Label Text="Внесок"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="Black"/>

            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="15" RowSpacing="10">
                <Entry Placeholder="Номер картки" Grid.Row="0" Grid.Column="0" />
                <Entry Placeholder="MM / PP" Grid.Row="0" Grid.Column="1" />
                <Entry Placeholder="ПІБ власника" Grid.Row="1" Grid.Column="0" />
                <Entry Placeholder="CVV2" Grid.Row="1" Grid.Column="1" IsPassword="True" />
                <Entry Placeholder="Email" Grid.Row="2" Grid.Column="0" Keyboard="Email" />
                <Entry Placeholder="Телефон +380" Grid.Row="2" Grid.Column="1" Keyboard="Telephone" />
                <Entry Placeholder="Сума" Grid.Row="3" Grid.Column="0" Keyboard="Numeric" />
                <Picker Grid.Row="3" Grid.Column="1">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>UAH</x:String>
                            <x:String>USD</x:String>
                            <x:String>EUR</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
            </Grid>

            <Picker Title="Оберіть призначення">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Ліки для тварин</x:String>
                        <x:String>Харчування</x:String>
                        <x:String>Покращення умов</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Button Text="Допомогти"
                    BackgroundColor="#FFFFD129"
                    TextColor="Black"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HeightRequest="45"
                    Clicked="OnDonateClicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
