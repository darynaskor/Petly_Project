<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Petly.Maui.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:Petly.Maui.ViewModels"
    x:DataType="viewmodel:LoginViewModel"
    BackgroundColor="#FFFFFBF7"
    Title="Вхід">

    <ScrollView>
        <Grid Padding="24"
              RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto">

            <Label Text="Petly" FontSize="32" FontAttributes="Bold" TextColor="#FFEA8A00" />

            <Label Grid.Row="1" Text="Раді знову бачити!" FontSize="22"
                   HorizontalOptions="Center" Margin="0,24,0,24" />

            <Grid Grid.Row="2" ColumnDefinitions="Auto,*" Margin="0,0,0,8">
                <Label Text="Email:" VerticalTextAlignment="Center" />
                <Entry Grid.Column="1" Keyboard="Email" Text="{Binding Email}" />
            </Grid>

            <Grid Grid.Row="3" ColumnDefinitions="Auto,*" Margin="0,0,0,8">
                <Label Text="Password:" VerticalTextAlignment="Center" />
                <Entry Grid.Column="1" IsPassword="True" Text="{Binding Password}" />
            </Grid>

            <Grid Grid.Row="4" ColumnDefinitions="Auto,*" Margin="0,4,0,8">
                <CheckBox IsChecked="{Binding RememberMe}" />
                <Label Grid.Column="1" Text="Запам’ятати мене" VerticalTextAlignment="Center" />
            </Grid>

            <Label Grid.Row="5" Text="{Binding Error}" TextColor="Red" IsVisible="{Binding HasError}" />

            <Button Grid.Row="6" Text="Увійти" Command="{Binding LoginCommand}" HeightRequest="44" CornerRadius="10" />

            <Grid Grid.Row="7" ColumnDefinitions="Auto,Auto" HorizontalOptions="Center" Margin="0,12,0,0">
                <Label Text="Немає акаунту?" VerticalTextAlignment="Center" />
                <Button Grid.Column="1" Text="Зареєструватися" Padding="12,6"
                        CornerRadius="12" BackgroundColor="#FFE9BE20" TextColor="Black"
                        Command="{Binding GoToRegisterCommand}" Margin="8,0,0,0" />
            </Grid>

        </Grid>
    </ScrollView>
</ContentPage>
