<?xml version="1.0" encoding="utf-8" ?>   
<ContentPage
    x:Class="Petly.Maui.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:Petly.Maui.ViewModels"
    x:DataType="viewmodel:LoginViewModel"
    BackgroundColor="#FFFFFBF7"
    Title="Вхід">

    <Grid>

        <AbsoluteLayout>
            <Image x:Name="Paw1" Source="paw.png" WidthRequest="48" Opacity="0.6"
                   AbsoluteLayout.LayoutBounds="0.05,1,48,48"
                   AbsoluteLayout.LayoutFlags="PositionProportional" />
            <Image x:Name="Paw2" Source="paw.png" WidthRequest="48" Opacity="0.55"
                   AbsoluteLayout.LayoutBounds="0.18,1,48,48"
                   AbsoluteLayout.LayoutFlags="PositionProportional" />
            <Image x:Name="Paw3" Source="paw.png" WidthRequest="48" Opacity="0.5"
                   AbsoluteLayout.LayoutBounds="0.31,1,48,48"
                   AbsoluteLayout.LayoutFlags="PositionProportional" />
            <Image x:Name="Paw4" Source="paw.png" WidthRequest="48" Opacity="0.45"
                   AbsoluteLayout.LayoutBounds="0.44,1,48,48"
                   AbsoluteLayout.LayoutFlags="PositionProportional" />
            <Image x:Name="Paw5" Source="paw.png" WidthRequest="48" Opacity="0.6"
                   AbsoluteLayout.LayoutBounds="0.57,1,48,48"
                   AbsoluteLayout.LayoutFlags="PositionProportional" />
            <Image x:Name="Paw6" Source="paw.png" WidthRequest="48" Opacity="0.55"
                   AbsoluteLayout.LayoutBounds="0.70,1,48,48"
                   AbsoluteLayout.LayoutFlags="PositionProportional" />
            <Image x:Name="Paw7" Source="paw.png" WidthRequest="48" Opacity="0.5"
                   AbsoluteLayout.LayoutBounds="0.83,1,48,48"
                   AbsoluteLayout.LayoutFlags="PositionProportional" />
            <Image x:Name="Paw8" Source="paw.png" WidthRequest="48" Opacity="0.45"
                   AbsoluteLayout.LayoutBounds="0.96,1,48,48"
                   AbsoluteLayout.LayoutFlags="PositionProportional" />
        </AbsoluteLayout>

        <ScrollView ZIndex="1">
            <Grid Padding="24"
                  RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto">

                <Label x:Name="Logo"
                       Text="Petly"
                       FontSize="32"
                       FontAttributes="Bold"
                       TextColor="#FFEA8A00"
                       Opacity="0"
                       TranslationY="20"/>

                <Label x:Name="WelcomeText"
                       Grid.Row="1"
                       Text="Раді знову бачити!"
                       FontSize="22"
                       HorizontalOptions="Center"
                       Margin="0,24,0,24"
                       Opacity="0"
                       TranslationY="20"/>

                <Grid x:Name="EmailBlock"
                      Grid.Row="2"
                      ColumnDefinitions="Auto,*"
                      Margin="0,0,0,8"
                      Opacity="0">
                    <Label Text="Email:" VerticalTextAlignment="Center" />
                    <Entry Grid.Column="1" Keyboard="Email" Text="{Binding Email}" />
                </Grid>

                <Grid x:Name="PasswordBlock"
                      Grid.Row="3"
                      ColumnDefinitions="Auto,*"
                      Margin="0,0,0,8"
                      Opacity="0">
                    <Label Text="Password:" VerticalTextAlignment="Center" />
                    <Entry Grid.Column="1" IsPassword="True" Text="{Binding Password}" />
                </Grid>

                <Grid x:Name="RememberBlock"
                      Grid.Row="4"
                      ColumnDefinitions="Auto,*"
                      Margin="0,4,0,8"
                      Opacity="0">
                    <CheckBox IsChecked="{Binding RememberMe}" />
                    <Label Grid.Column="1" Text="Запам’ятати мене" VerticalTextAlignment="Center" />
                </Grid>

                <Label Grid.Row="5" Text="{Binding Error}" TextColor="Red" IsVisible="{Binding HasError}" />

                <Button x:Name="LoginButton"
                        Grid.Row="6"
                        Text="Увійти"
                        Command="{Binding LoginCommand}"
                        HeightRequest="44"
                        CornerRadius="10"
                        Scale="0"/>

                <Grid x:Name="RegisterBlock"
                      Grid.Row="7"
                      ColumnDefinitions="Auto,Auto"
                      HorizontalOptions="Center"
                      Margin="0,12,0,0"
                      Opacity="0">
                    <Label Text="Немає акаунту?" VerticalTextAlignment="Center" />
                    <Button Grid.Column="1" Text="Зареєструватися" Padding="12,6"
                            CornerRadius="12" BackgroundColor="#FFE9BE20" TextColor="Black"
                            Command="{Binding GoToRegisterCommand}"
                            Margin="8,0,0,0" />
                </Grid>

            </Grid>
        </ScrollView>

    </Grid>
</ContentPage>
