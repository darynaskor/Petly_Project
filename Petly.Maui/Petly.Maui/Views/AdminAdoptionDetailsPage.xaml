<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Petly.Maui.Views.AdminAdoptionDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Деталі заявки"
    BackgroundColor="#FFFFFBF7">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Button Text="← Назад"
                    BackgroundColor="#FFFFD129"
                    HeightRequest="40"
                    WidthRequest="100"
                    Clicked="OnBackClicked"/>

            <Label Text="Деталі заявки" FontSize="28" FontAttributes="Bold"/>

            <!-- Фото тварини -->
            <Image x:Name="PetPhoto" HeightRequest="250" Aspect="AspectFill"/>

            <!-- Дані користувача -->
            <Label Text="Дані користувача" FontSize="20" FontAttributes="Bold"/>
            <Label x:Name="UserName"/>
            <Label x:Name="UserEmail"/>
            <Label x:Name="UserPhone"/>
            <Label x:Name="UserDescription" FontSize="16" TextColor="Black"/>

            <!-- Дані тварини -->
            <Label Text="Дані тварини" FontSize="20" FontAttributes="Bold"/>
            <Label x:Name="PetInfo"/>

            <!-- Кнопки -->
            <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                <Button Text="Підтвердити"
                        BackgroundColor="#A0FFA0"
                        WidthRequest="150"
                        Clicked="OnApprove"/>
                <Button Text="Відхилити"
                        BackgroundColor="#FF9A9A"
                        WidthRequest="150"
                        Clicked="OnReject"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
