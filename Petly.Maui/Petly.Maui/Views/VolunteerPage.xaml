<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Petly.Maui.Controls"
             x:Class="Petly.Maui.Views.VolunteerPage"
             Title="Волонтерство"
             BackgroundColor="#FFFFFBF7">

    <Grid RowDefinitions="Auto,*"
          Background="{DynamicResource Theme_BackgroundBrush}">

        <!-- Хедер з меню -->
        <controls:TopNavBar />

        <!-- Вміст сторінки -->
        <Grid Grid.Row="1" Padding="20">

            <!-- ====== 1. Форма для ЗВИЧАЙНОГО користувача ====== -->
            <ScrollView x:Name="UserFormScroll">
                <VerticalStackLayout Spacing="20">

                    <Label Text="Волонтерство"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="Black" />

                    <Label Text="Стань волонтером Petly"
                           FontSize="18"
                           TextColor="#444" />

                    <!-- Ім'я + Прізвище -->
                    <Grid ColumnDefinitions="*,*"
                          ColumnSpacing="20">
                        <Entry x:Name="FirstNameEntry"
                               Placeholder="Ім'я" />
                        <Entry x:Name="LastNameEntry"
                               Grid.Column="1"
                               Placeholder="Прізвище" />
                    </Grid>

                    <!-- Email + Телефон -->
                    <Grid ColumnDefinitions="*,*"
                          ColumnSpacing="20">
                        <Entry x:Name="EmailEntry"
                               Placeholder="Email" />
                        <Entry x:Name="PhoneEntry"
                               Grid.Column="1"
                               Placeholder="Телефон +380"
                               Keyboard="Telephone" />
                    </Grid>

                    <!-- Притулок + Тип волонтерства -->
                    <Grid ColumnDefinitions="*,*"
                          ColumnSpacing="20">
                        <Picker x:Name="ShelterPicker"
                                Title="Обери притулок" />
                        <Picker x:Name="TypePicker"
                                Grid.Column="1"
                                Title="Тип волонтерства" />
                    </Grid>

                    <Button Text="Надіслати заявку"
                            BackgroundColor="#FFFFD129"
                            TextColor="Black"
                            CornerRadius="10"
                            HeightRequest="48"
                            Clicked="OnSendClicked" />
                </VerticalStackLayout>
            </ScrollView>

            <!-- ====== 2. Список заявок для АДМІНА ====== -->
            <VerticalStackLayout x:Name="AdminListLayout"
                                 IsVisible="False"
                                 Spacing="16">
                <Label Text="Заявки на волонтерство"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="Black" />

                <CollectionView x:Name="RequestsList"
                                SelectionMode="Single"
                                SelectionChanged="OnRequestSelected">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Stroke="#DDDDDD"
                                    StrokeThickness="1"
                                    BackgroundColor="White"
                                    Margin="0,4"
                                    Padding="12">
                                <VerticalStackLayout Spacing="4">
                                    <Label Text="{Binding FirstName} "
                                           FontAttributes="Bold"
                                           TextColor="Black">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding FirstName}" />
                                                <Span Text=" " />
                                                <Span Text="{Binding LastName}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>

                                    <Label Text="{Binding Email}"
                                           FontSize="13"
                                           TextColor="#555" />
                                    <Label Text="{Binding Phone}"
                                           FontSize="13"
                                           TextColor="#555" />

                                    <Label Text="{Binding Shelter}"
                                           FontSize="13"
                                           TextColor="#444" />
                                    <Label Text="{Binding Type}"
                                           FontSize="13"
                                           TextColor="#444" />

                                    <Label Text="{Binding Status}"
                                           FontSize="13"
                                           TextColor="#B36B00" />
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

        </Grid>
    </Grid>
</ContentPage>
