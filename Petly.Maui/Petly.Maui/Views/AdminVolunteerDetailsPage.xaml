<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Petly.Maui.Views.AdminVolunteerDetailsPage"
             Title="Деталі волонтера"
             BackgroundColor="#FFFFFBF7">

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="20">

            <!-- Назад -->
            <Button Text="← Назад"
                    BackgroundColor="#FFFFD129"
                    TextColor="Black"
                    CornerRadius="8"
                    WidthRequest="100"
                    Clicked="OnBackClicked"/>

            <Label Text="Деталі заявки" FontSize="28" FontAttributes="Bold" TextColor="Black"/>

            <!-- Інформація про користувача -->
            <Label Text="Користувач" FontSize="20" FontAttributes="Bold" TextColor="Black"/>
            <Label x:Name="UserInfoLabel" FontSize="16" TextColor="Black"/>

            <!-- Інформація про волонтерство -->
            <Label Text="Волонтерство" FontSize="20" FontAttributes="Bold" TextColor="Black"/>
            <Label x:Name="VolunteerInfoLabel" FontSize="16" TextColor="Black"/>

            <!-- Статус заявки -->
            <Label Text="Статус" FontSize="20" FontAttributes="Bold" TextColor="Black"/>
            <Label x:Name="StatusLabel" FontSize="16" TextColor="DarkGreen"/>

            <!-- Кнопки для адміну -->
            <HorizontalStackLayout Spacing="15" Margin="0,20,0,0">
                <Button Text="Підтвердити"
                        BackgroundColor="#FF4CAF50"
                        TextColor="White"
                        CornerRadius="8"
                        Clicked="OnApproveClicked"/>
                <Button Text="Відхилити"
                        BackgroundColor="#FFF44336"
                        TextColor="White"
                        CornerRadius="8"
                        Clicked="OnRejectClicked"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
