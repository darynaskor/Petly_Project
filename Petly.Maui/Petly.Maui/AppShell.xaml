<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Petly.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:core="clr-namespace:Petly.Maui"
    xmlns:views="clr-namespace:Petly.Maui.Views">

    <!-- Основні сторінки -->
    <ShellContent Route="home"     ContentTemplate="{DataTemplate core:MainPage}" />
    <ShellContent Route="pets"     ContentTemplate="{DataTemplate views:PetsListPage}" />
    <ShellContent Route="about"    ContentTemplate="{DataTemplate views:AboutPage}" />
    <ShellContent Route="donation" ContentTemplate="{DataTemplate views:DonationPage}" />

    <!-- Авторизація -->
    <ShellContent Route="login"    ContentTemplate="{DataTemplate views:LoginPage}" />
    <ShellContent Route="register" ContentTemplate="{DataTemplate views:RegisterPage}" />
</Shell>
