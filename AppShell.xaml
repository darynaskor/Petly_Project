<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       
       xmlns:core="clr-namespace:Petly.Maui"       
       xmlns:views="clr-namespace:Petly.Maui.Views" 
       x:Class="Petly.Maui.AppShell">

    <ShellContent
        Title="Головна"
        ContentTemplate="{DataTemplate core:MainPage}"  Route="MainPage" />

    <ShellContent
        Title="Тварини"
        ContentTemplate="{DataTemplate views:PetsListPage}" Route="PetsListPage" />

    <ShellContent
        Title="Більше"
        ContentTemplate="{DataTemplate views:PetDetailsPage}" Route="PetDetailsPage" />

</Shell>